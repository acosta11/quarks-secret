#!/bin/bash

GIT_ROOT="${GIT_ROOT:-$(git rev-parse --show-toplevel)}"
. "${GIT_ROOT}/bin/include/versioning"
. "${GIT_ROOT}/.envrc"

set +e

if type -a minikube >/dev/null 2>/dev/null; then
  dockerenv=`minikube docker-env`
  if [ $? -ne 0 ]; then
    echo "Error: Could not retrieve docker settings from minikube."
    exit 1
  fi
  eval ${dockerenv}
fi

set -e

docker build "${GIT_ROOT}" -f "${GIT_ROOT}/Dockerfile" -t ${OPERATOR_DOCKER_ORGANIZATION}/cf-operator:${VERSION_TAG}
